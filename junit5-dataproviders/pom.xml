  <profiles>
    <profile>
      <id>windows32</id>
      <activation>
        <os>
          <family>windows</family>
          <arch>x86</arch>
        </os>
        <!--
  There is no Oracle support for JDK 9+ on 32 bit windows.
  Standalone openjdk 9 windows 32 build is available from:
  https://cdn.azul.com/zulu/bin/zulu9.0.7.1-jdk9.0.7-win_i686.zip
  see  also comment in https://dzone.com/articles/no-jdk-9-for-windows-xp
  https://www.azul.com/downloads/zulu/zulu-windows/
  It has a non-standard version
  javac -version
  javac 9.0.7.1
  leading to the maven-enforcer-plugin error:
  Detected JDK Version: 9.0.7-1 is not in the allowed range [1.8,1.9).
  Therefore an autodetected profile is required to allow building the project
  on 32 bit windows, and similar for 32 bit linux (ubuntu, at least)
-->
      </activation>
      <properties>
        <build_os>win32</build_os>
        <zulu.java.version>9</zulu.java.version>
        <zulu.java.build>9.0.7</zulu.java.build>
        <maven-enforcer-plugin.java.version>${zulu.java.build}</maven-enforcer-plugin.java.version>
        <java.version>${zulu.java.version}</java.version>
      </properties>
